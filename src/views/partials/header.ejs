<header>
        
    <div class="barraenvios">
        <p>Envio gratis a todo el país - Cuotas sin interés</p>
    </div>

    <div class="encabezado">
     <div class="logo_burguer">   
        <div class="burger">
            <i class="fa-solid fa-bars"></i>
            
        </div>
    </div>
    <div class="container">
       <form action="/products/search" method="GET"><input class="input_buscador" name="keywords" type="text" placeholder="Buscar">
        <div class="btn">
            <i class="fa fa-search"></i>
        </div>
    </form>
    </div>
        <div class="logo">
        <a href="/"><img class="Logo" src="/design/Logo.jpg" alt="logo" height="0"></a>
    </div>
    
    
        <div class="Buscador">
        <form class="form_buscador" action="/products/search" method="GET">
            <button><i class="fa-solid fa-magnifying-glass"></i></button>
            <input type="text" name="keywords" placeholder="Buscador">               
           </form>
        </div>
        <div class="carrito">
            <% if (locals.userLogin) { %>
                <% if (userLogin.rol === "admin") { %>
                    <!-- esto es agregar producto-->
                <a class="mas_celular" href="/products/add"><i class="fa-solid fa-2x fa-circle-plus " ></i></a>
                <a class="mas_tablet_pc" href="/products/add"><i class="fa-solid fa-3x fa-circle-plus" ></i></a>
                <hr class="barra_hr">
                    <!-- esto es agregar producto-->
                <% } else { %>
                    <!-- esto es el perfil-->
                <a class="logo_mas" href="/users/profile"> <img src="/img/usuario luna blanca.jpg" alt="" height="30"></a>
                    <!-- esto es el perfil-->
                    <!-- esto es para desloguearse-->
                <a class="logo_mas" href="/users/logout"> <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                    <!-- esto es para desloguearse-->
                <% } %>
            <% } else { %>
                    <!-- esto es el carrito-->
                <a class="carrito_mas" href="/products/carrito"><img src="/img/carrito.jpg" alt="" height="30"></a>
                <hr class="barra_hr">
                    <!-- esto es el carrito -->
                    <!-- esto es para loguearse-->
                <a class="logo_mas" href="/users/login"> <img src="/img/usuario luna blanca.jpg" alt="" height="30"></a>
                    <!-- esto es para loguearse-->
            <% } %> 
        </div>
    </div>
</header>

